{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.1.3.json",
  "width": 700,
  "height": 580,
  "padding": 0,
  "config": {
    "view": {
      "stroke": "none"
    },
    "style": {
      "area_background": {
        "stroke": "black",
        "strokeWidth": 0.2,
        "fill": "#cff"
      }
    }
  },
  "data": {
    "url": "TEMPLATE",
    "format": {
      "type": "json",
      "property": "TEMPLATE"
    }
  },
  "projection": {
    "type": "stereographic"
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "style": "area_background"
      }
    },
    {
      "mark": {
        "type": "circle",
        "fill": "red",
        "stroke": "white",
        "strokeWidth": 1,
        "fill-opacity": 0.5
      },
      "encoding": {
        "longitude": {
          "field": "properties.centroid_lon",
          "type": "quantitative"
        },
        "latitude": {
          "field": "properties.centroid_lat",
          "type": "quantitative"
        },
        "size": {
          "field": "TEMPLATE",
          "type": "quantitative",
          "scale": {
            "range": [0,5000]
          },
          "legend": {
            "orient": "right",
            "title": "TEMPLATE"
          }
        }
      }
    }
  ]
}
