    {
      "mark": "point",
      "encoding": {
        "longitude": {
          "field": "properties.centroid_lon",
          "type": "quantitative"
        },
        "latitude": {
          "field": "properties.centroid_lat",
          "type": "quantitative"
        },
        "size": {"value" : 500},
        "fill": {"value" : "#009"},
        "shape": {
          "field": "TEMPLATE",
          "type": "nominal",
          "legend": {
            "orient": "right",
            "title": "TEMPLATE"
          }
        }
      }
    }
  ]
