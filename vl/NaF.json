{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.1.3.json",
  "width": 700,
  "height": 580,
  "padding": 0,
  "config": {
    "view": {
      "stroke": "none"
    }
  },
  "data": {
    "url": "TEMPLATE",
    "format": {
      "type": "json",
      "property": "TEMPLATE"
    }
  },
  "projection": {
    "type": "stereographic"
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.2,
        "fill": "#eff"
      }
